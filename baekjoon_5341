import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        while(true) {
        	int bottom = sc.nextInt();
        	int total = 0;
        	if(bottom == 0) return;
        	else for(int i=1; i<=bottom; i++) {
        		total += i;
        	}
        	System.out.println(total);
        }
    }
}
